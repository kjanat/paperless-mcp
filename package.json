{
  "name": "@kjanat/paperless-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for interacting with Paperless-NGX document management system. Enables AI assistants to manage documents, tags, correspondents, and document types through the Paperless-NGX API.",
  "keywords": [
    "mcp",
    "paperless-ngx",
    "document-management",
    "ai",
    "claude",
    "model-context-protocol",
    "paperless"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjanat/paperless-mcp.git"
  },
  "license": "ISC",
  "author": "Kaj Kowalski",
  "main": "src/index.ts",
  "bin": {
    "paperless-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts",
    "fmt": "dprint fmt .",
    "fmt:check": "dprint check .",
    "inspect": "bunx @modelcontextprotocol/inspector bun src/index.ts",
    "start": "bun src/index.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.1",
    "express": "^5.1.0",
    "typescript": "^5.8.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3"
  },
  "packageManager": "bun@1.3.9"
}
